<% content_for :nav do %>
  <%= render partial: "shared/nav_index", layout: "shared/nav" %>
<% end %>

<p class="article_result_info"><%= Article.public_count %> blogs found </p>
<ul class="articles_list">
  <% @articles.each do | article |%>
    <% unless article.archived? %>
      <li class="article_item">
        <h2 class="article_item_heading"><%= link_to article.title, article %></h2>
        <p class="article_item_timestamp"><%= time_ago_in_words(article.created_at)%> ago</p>
      </li>
    <% end %>
  <% end %>
</ul>
